---
interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<div
	class="flex flex-col items-center font-['Roboto'] text-center max-w-[19rem]">
	<!-- Icon Container -->
	<div class="w-8 h-8">
		<slot />
	</div>

	<h2 class="font-bold text-2xl">{title}</h2>
	<p class="text-xl font-light">{description}</p>
</div>
